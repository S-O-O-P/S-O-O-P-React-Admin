        from LINKBEE_USER
        where SIGNUP_PLATFORM = #{signupPlatform}
    </select>

    <insert id="saveUserInterest">
        INSERT INTO INTEREST_OF_USER
        (
            USER_CODE,
            INTEREST_CODE
        )
        VALUES
        (
            #{userCode}
        ,   #{interestCode}
        )
    </insert>



